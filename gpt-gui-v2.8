-- Find football helper
local function findFootball()
	for _, obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and obj.Name:lower():find("football") then
			return obj
		end
	end
end

-- STEAL BALL (directly attach)
stealBtn.MouseButton1Click:Connect(function()
	local char, _, _ = getChar()
	local ball = findFootball()
	if not ball then
		statusLabel.Text = "‚ùå No football!"
		statusLabel.TextColor3 = Color3.fromRGB(255,50,50)
		return
	end
	-- destroy previous welds
	for _, w in pairs(ball:GetDescendants()) do if w:IsA("Weld") then w:Destroy() end end
	local rightHand = char:FindFirstChild("RightHand") or char:WaitForChild("RightHand")
	local weld = Instance.new("Weld")
	weld.Part0 = rightHand
	weld.Part1 = ball
	weld.C0 = CFrame.new(0,0,0)
	weld.Parent = rightHand
	statusLabel.Text = "üèà Ball stolen!"
	statusLabel.TextColor3 = Color3.fromRGB(50,255,100)
end)

-- MAG (mid-air catch with auto-weld)
local magnetActive = false
local magnetLoop
magBtn.MouseButton1Click:Connect(function()
	local char, hum, hrp = getChar()
	magnetActive = not magnetActive

	if magnetActive then
		statusLabel.Text = "üß≤ Chasing ball..."
		magnetLoop = RunService.Heartbeat:Connect(function()
			local ball = findFootball()
			if not ball then
				magnetActive = false
				if magnetLoop then magnetLoop:Disconnect() end
				statusLabel.Text = "‚ùå No football!"
				statusLabel.TextColor3 = Color3.fromRGB(255,50,50)
				return
			end

			if ball:IsDescendantOf(char) then
				magnetActive = false
				if magnetLoop then magnetLoop:Disconnect() end
				statusLabel.Text = "üü¢ Ball acquired!"
				statusLabel.TextColor3 = Color3.fromRGB(100,255,100)
				return
			end

			if hrp then
				local targetPos = ball.Position
				if ball:FindFirstChild("Velocity") then
					targetPos = ball.Position + ball.Velocity.Unit * 1
				end
				hrp.CFrame = CFrame.new(targetPos)

				local rightHand = char:FindFirstChild("RightHand") or char:WaitForChild("RightHand")
				if (rightHand.Position - ball.Position).Magnitude < 2 then
					for _, w in pairs(ball:GetDescendants()) do if w:IsA("Weld") then w:Destroy() end end
					local weld = Instance.new("Weld")
					weld.Part0 = rightHand
					weld.Part1 = ball
					weld.C0 = CFrame.new(0,0,0)
					weld.Parent = rightHand
					statusLabel.Text = "üèà Ball caught!"
					statusLabel.TextColor3 = Color3.fromRGB(50,255,100)
					magnetActive = false
					if magnetLoop then magnetLoop:Disconnect() end
				end
			end
		end)
	else
		if magnetLoop then magnetLoop:Disconnect() end
		statusLabel.Text = "Ready! üòà"
		statusLabel.TextColor3 = Color3.fromRGB(100,255,100)
	end
end)

