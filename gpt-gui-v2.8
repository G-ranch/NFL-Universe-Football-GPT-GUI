local function findFootball()
    for _, obj in ipairs(workspace.Football:GetChildren()) do
        return obj -- return first one (owner)
    end
end

-- STEAL BALL (instant possession with visual weld)
stealBtn.MouseButton1Click:Connect(function()
    local ball = findFootball()
    if not ball then
        statusLabel.Text = "‚ùå No ball found!"
        statusLabel.TextColor3 = Color3.fromRGB(255,50,50)
        return
    end

    local hand = char:FindFirstChild("RightHand") or char:WaitForChild("RightHand")
    local weld = Instance.new("Weld")
    weld.Part0 = hand
    weld.Part1 = ball
    weld.C0 = CFrame.new(0,0,0)
    weld.Parent = hand
    -- Remove old welds
    if ball:FindFirstChildOfClass("Weld") then
        ball:FindFirstChildOfClass("Weld"):Destroy()
    end

    statusLabel.Text = "üèà Stole ball from "..ball.Name.."!"
    statusLabel.TextColor3 = Color3.fromRGB(50,255,100)
end)

-- MAG (teleport in front until ball is yours)
magBtn.MouseButton1Click:Connect(function()
    magnetActive = not magnetActive
    if magnetActive then
        statusLabel.Text = "üß≤ Chasing ball..."
        magnetLoop = RunService.Heartbeat:Connect(function()
            local ball = findFootball()
            if not ball then
                magnetActive = false
                if magnetLoop then magnetLoop:Disconnect() end
                return
            end
            if ball.Parent == char then
                magnetActive = false
                if magnetLoop then magnetLoop:Disconnect() end
                statusLabel.Text = "üü¢ Ball acquired!"
                statusLabel.TextColor3 = Color3.fromRGB(100,255,100)
                return
            end
            local _, hrp = getChar()
            if hrp then
                -- Teleport 3 studs in front
                local dir = (ball.Position - hrp.Position).Unit
                hrp.CFrame = CFrame.new(ball.Position - dir*3)
            end
        end)
    else
        if magnetLoop then magnetLoop:Disconnect() end
        statusLabel.Text = "Ready! üòà"
        statusLabel.TextColor3 = Color3.fromRGB(100,255,100)
    end
end)

