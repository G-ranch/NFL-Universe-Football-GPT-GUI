end)

-- MAG
magBtn.MouseButton1Click:Connect(function()
	local c, hrp, _ = getChar()
	local active = true
	status.Text = "üß≤ Chasing ball..."
	status.TextColor3 = Color3.fromRGB(255,255,0)
	task.spawn(function()
		while active do
			local ball = getBall()
			if ball then
				local vel = ball.Velocity
				local targetPos = ball.Position + vel.Unit*3
				hrp.CFrame = CFrame.new(targetPos, ball.Position)
				local hasBall = false
				if ball:FindFirstChild("RightHand") then
					local weld = ball.RightHand:FindFirstChildOfClass("Motor6D")
					if weld and weld.Part0 == c:FindFirstChild("RightHand") then hasBall = true end
				end
				if hasBall then
					status.Text = "üß≤ Ball caught!"
					status.TextColor3 = Color3.fromRGB(0,255,0)
					active = false
				end
			else
				status.Text = "‚ùå No football"
				status.TextColor3 = Color3.fromRGB(255,0,0)
				active = false
			end
			task.wait(0.1)
		end
	end)
end)

-- AUTO TACKLE
tackleBtn.MouseButton1Click:Connect(function()
	task.spawn(function()
		local c, hrp, _ = getChar()
		local found = false
		local timeout = tick()+1
		while not found and tick()<timeout do
			for _,v in pairs(Players:GetPlayers()) do
				if v~=player and v.Character then
					local ball = workspace:FindFirstChild("Football ("..v.Name..")")
					if ball then
						local targetHRP = v.Character:FindFirstChild("HumanoidRootPart")
						if targetHRP then
							task.wait(0.1)
							hrp.CFrame = targetHRP.CFrame + targetHRP.CFrame.LookVector
							status.Text = "üí• Auto Tackle!"
							status.TextColor3 = Color3.fromRGB(255,255,0)
							found = true
							break
						end
					end
				end
			end
			task.wait(0.05)
		end
		if not found then
			status.Text = "‚ùå No ball owner found"
			status.TextColor3 = Color3.fromRGB(255,0,0)
		end
	end)
end)

