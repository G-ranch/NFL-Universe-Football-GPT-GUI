--// Football Scanner
local function findFootball()
	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and (obj.Name == "Football" or obj.Name:match("^Football %(.+%)$")) then
			local isHeld = obj.Parent:FindFirstChildOfClass("Humanoid") ~= nil
			local owner = nil
			if isHeld then owner = obj.Parent.Name end
			return obj, owner, isHeld
		end
	end
	return nil,nil,false
end

